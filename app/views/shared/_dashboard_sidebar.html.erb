    <%= link_to dashboard_posts_new_path, :class => current_sidebar_class?(dashboard_posts_new_path) do %>
      <li class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
